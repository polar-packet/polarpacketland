---
import favIcon from '~/assets/favicons/favicon.png';
import favIconSvg from '~/assets/favicons/favicon.png';
import appleTouchIcon from '~/assets/favicons/apple-touch-icon.png';
---

<link rel="shortcut icon" href={favIcon} />
<link rel="icon" type="image/svg+xml" href={favIconSvg.src} />
<link rel="mask-icon" href={favIconSvg.src} color="#8D46E7" />
<link rel="apple-touch-icon" sizes="180x180" href={appleTouchIcon.src} />

<!-- Add these meta tags for better search engine visibility -->
<meta property="og:image" content={appleTouchIcon.src} />
<meta name="twitter:image" content={appleTouchIcon.src} />
<meta name="image" content={appleTouchIcon.src} />