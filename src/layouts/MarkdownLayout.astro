---
import Layout from '~/layouts/PageLayout.astro';
import { SITE } from 'astrowind:config';
import { getCanonical } from '~/utils/permalinks';

import type { MetaData } from '~/types';

export interface Props {
  frontmatter: {
    title?: string;
    description?: string;
    image?: string;
    author?: string;
    publishDate?: string | Date;
  };
}

const { frontmatter } = Astro.props;

const metadata: MetaData = {
  title: frontmatter?.title,
  description: frontmatter?.description,
  openGraph: frontmatter?.image ? {
    images: [
      {
        url: frontmatter.image,
        width: 1200,
        height: 630,
      },
    ],
  } : undefined,
};

const canonical = String(getCanonical(String(Astro.url.pathname)));
const imageUrl = frontmatter?.image ? new URL(String(frontmatter.image), SITE.site).toString() : undefined;
const ld = {
  "@context": "https://schema.org",
  "@type": "Article",
  "mainEntityOfPage": { "@type": "WebPage", "@id": canonical },
  "headline": frontmatter?.title ?? '',
  "description": frontmatter?.description ?? '',
  "url": canonical,
  ...(imageUrl ? { image: [imageUrl] } : {}),
  ...(frontmatter?.author ? { author: { "@type": "Person", "name": String(frontmatter.author) } } : {}),
  ...(frontmatter?.publishDate ? { datePublished: new Date(String(frontmatter.publishDate)).toISOString() } : {}),
};
---

<Layout metadata={metadata}>
  <!-- JSON-LD (Article) - uses frontmatter dynamically for each post -->
  <script type="application/ld+json" set:html={JSON.stringify(ld)}></script>

  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter">{frontmatter.title}</h1>
    <div
      class="mx-auto prose prose-lg max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8"
    >
      <slot />
    </div>
  </section>
</Layout>
